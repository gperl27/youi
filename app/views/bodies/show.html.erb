<%= render 'partials/stats_header' %>
<div class='stats-sub-heading'>  
  <h1>Page-wide Choices</h1>
  <h2><%= @changes %> changes have been made to this component.</h2>
</div>
<div class='container graph-div'>
  <div class='row'>
    <div class='col-md-6'>
      <h2>Fonts</h2>
      <ul>
        <li>Most Chosen: <span class='orange'><%= @fontfamily_most %></span></li>
        <li>Least Chosen: <span class='orange'><%= @fontfamily_least %></span></li>
      </ul>
    </div>
    <div class='col-md-6'>
        <%= column_chart @fontfamily %>    
    </div>
  </div>
</div>
  <%= render 'partials/stats_footer' %>