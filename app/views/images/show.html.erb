<%= render("partials/show_style") %>
<%= render 'partials/stats_header' %>

<div class='stats-sub-heading'>  
  <h1>Image Choices</h1>
  <h2><%= @changes %> changes have been made to this component.</h2>
</div>

<div class='container graph-div'>

  <div class='row'>
    <div class='col-md-6'>
      <h2>Border-Size</h2>
      <ul>
        <li>Max: <span class='orange'><%= @border_max %>px</span></li>
        <li>Min: <span class='orange'><%= @border_min %>px</span></li>
        <li>Most Chosen: <span class='orange'><%= @border_most %>px</span></li>
        <li>Least Chosen: <span class='orange'><%= @border_least %>px</span></li>
      </ul>
    </div>
    <div class='col-md-6'>
        <%= column_chart @border %>    
    </div>
  </div>
  <hr class='blue-line'>
  <div class='row'>
    <div class='col-md-6'>
      <%= column_chart @height %>
    </div>
    <div class='col-md-6'>
      <h2>Height</h2>
      <ul>
        <li>Max: <span class='orange'><%= @height_max %>px</span></li>
        <li>Min: <span class='orange'><%= @height_min %>px</span></li>
        <li>Most Chosen: <span class='orange'><%= @height_most %>px</span></li>
        <li>Least Chosen: <span class='orange'><%= @height_least %>px</span></li>
      </ul>
    </div>
  </div>
  <hr class='blue-line'>
  <div class='row'>
    <div class='col-md-6'>
      <h2>Border-Radius</h2>
      <ul>
        <li>Max: <span class='orange'><%= @borderradius_max %>px</span></li>
        <li>Min: <span class='orange'><%= @borderradius_min %>px</span></li>
        <li>Most Chosen: <span class='orange'><%= @borderradius_most %>px</span></li>
        <li>Least Chosen: <span class='orange'><%= @borderradius_least %>px</span></li>
      </ul>
    </div>
    <div class='col-md-6'>
        <%= column_chart @borderradius %>    
    </div>
  </div>
  <hr class='blue-line'>
  <div class='row'>
    <div class='col-md-6'>
      <%= column_chart @width %>
    </div>
    <div class='col-md-6'>
      <h2>Width</h2>
      <ul>
        <li>Max: <span class='orange'><%= @width_max %>px</span></li>
        <li>Min: <span class='orange'><%= @width_min %>px</span></li>
        <li>Most Chosen: <span class='orange'><%= @width_most %>px</span></li>
        <li>Least Chosen: <span class='orange'><%= @width_least %>px</span></li>
      </ul>
    </div>
  </div>
  <hr class='blue-line'>
  <div class='row'>
    <div class='col-md-6'>
      <h2>Padding</h2>
      <ul>
        <li>Max: <span class='orange'><%= @padding_max %>px</span></li>
        <li>Min: <span class='orange'><%= @padding_min %>px</span></li>
        <li>Most Chosen: <span class='orange'><%= @padding_most %>px</span></li>
        <li>Least Chosen: <span class='orange'><%= @padding_least %>px</span></li>
      </ul>
    </div>
    <div class='col-md-6'>
        <%= column_chart @padding %>    
    </div>
  </div>
  <hr class='blue-line'>
  <div class='row border-color'>
    <h2>Border-Color</h2>

    <div class='col-md-4'>    
      <div class='vert vert-block hue-bar'></div>
          <div class="vert box-chart">
            <div class='hue-box'></div>
            <div class='bisector'></div>
          </div>
          <h3>Hue</h3>
          <h4>Most Popular: <%= @border_color_hue %></h4>
    </div>

    <div class='col-md-4'>
      <div class="vert vert-block saturation-bar"></div>
      <div class='vert box-chart'>
        <div class='saturation-box'></div>
        <div class='bisector'></div>
      </div>
        <h3>Saturation</h3>
        <h4>Most Popular: <%= @border_color_saturation %>%</h4>
    </div>

    <div class='col-md-4'>
      <div class="vert vert-block luminosity-bar"></div>
      <div class='vert box-chart'>
        <div class='luminosity-box'></div>
        <div class='bisector'></div>
      </div>
        <h3>Luminosity</h3>
        <h4>Most Popular: <%= @border_color_luminosity %>%</h4>
    </div>
  </div>
</div>
  <%= render 'partials/stats_footer' %>