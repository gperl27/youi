<style>
  .vert {
    display: inline-block;
  }

  .box-chart {
    height: 250px;
    width: 250px;
    border-top: 1px solid black;
    border-bottom: 1px solid black;
    position: relative;
  }

  .saturation-box, .luminosity-box {
    height: 50px;
    width: 50px;
    z-index: 99;
    position: absolute;
    left: 100px;
    transform: translateY(50%);
  }

  .saturation-box {
    bottom: <%= @color_saturation %>%;
    background-color: hsl(
        <%= @color_hue %>,
        <%= @color_saturation %>%,
        <%= @color_luminosity %>%
      );
    
  }

  .luminosity-box {
    bottom: <%= @color_luminosity %>%;
    background-color: hsl(
        <%= @color_hue %>,
        <%= @color_saturation %>%,
        <%= @color_luminosity %>%
      );
  }

  .bisector {
    border: 1px: solid black;
    height: 100%;
    position: absolute;
    left: 125px;
    background-color: black;
    width: 2px;
  }

  .block {
    height: 50px;
  }

  .vert-block {
    height: 250px;
    width: 50px;
    margin-right: 15px;
  }

 .hue-container {
  width: 100% !important;
  position: relative;
 }


