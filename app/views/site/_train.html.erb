<%= render("home_style") %>

<div class='container-fluid'>
 
  <header class='header section-selector-1'>
   <div class='container'>
      <div class='row'>
        <div class='col-md-2'>
          <h1 class='h1-selector-1 body-selector-1'>youi</h1>
        </div>
        <div class='col-md-10'>
          <nav class='custom-nav'>
            <ul class='body-selector-2'>
              <%= link_to root_path do %>
                <li class="li-selector-1 where-am-i">
                  Home
                </li>
              <% end %>
              <%= link_to user_path(@cookie) do %>
              <li class="li-selector-1">
                Custom
              </li>
              <% end %>
              <%= link_to stats_path do %>
              <li class="li-selector-1">
                Stats
              </li>
              <% end %>
            </ul>
          </nav>
        </div>
      </div>
    </div>
  </header>
  
  <section class='instructions container'>
    <%= render 'partials/instructions', count: @crowd_count %>
    <div class='row'>
      <div class='col-md-7'>
        <button class='button-selector-1'>
          Try Me
        </button>
      </div>  
      <div class='col-md-5'></div>
    </div>
  </section>

  <div id = 'fonts' class='site-editables section-selector-2'>
    <div class='container'>
      <div class='row'>
        <div class='col-md-6'>
            <h2 class='h2-selector-1 body-selector-1'
              >Title Fonts</h2>
              <hr>
              <p class='actual-fonts body-selector-1'  
              >The quick brown fox jumps over the lazy dog</p>
        </div>
        <div class='col-md-6'>
            <h2 class='h2-selector-1 body-selector-1'             >Main Font</h2>
            <hr>
              <p class='actual-fonts body-selector-2'  
              >The quick brown fox jumps over the lazy dog</p>
        </div>
      </div>
    </div>
  </div>

    </div>
  </div>

  <section id = 'info' class='info section-selector-3'>
    <div class='container'>
       <h3 class='h3-selector-1 body-selector-1'>About</h3>
      <p class='paragraph-selector-1 body-selector-2'>
        <%= render "partials/about_info" %>
      </p>
      
      <div class='inspirations'>
      <h3 class='h3-selector-1 body-selector-1'>Inspirations</h3>
      <div class='row'>
        
        <div class='col-md-6'>
          <figure>
            <img class="image-selector-1" src="/twitch.jpg" alt="Twitch Plays Pokemon" />
            <h4 class='h4-selector-1 body-selector-1'>Twitch plays pokemon</h4>
          </figure>
          
          <p class='paragraph-selector-2 body-selector-2'>
            <%= render "partials/twitch_info" %>
          </p>
        </div>
        
        <div class='col-md-6'>
           <figure>
            <img class="image-selector-1" src="/faces.jpg" alt="Average of women's faces" />
            <h4 class='h4-selector-1 body-selector-1'>Average Face Experiment</h4>
          </figure>
          <p class='paragraph-selector-2 body-selector-2'>
            <%= render "partials/faces_info" %>
          </p>
        </div>
        
      </div>
      </div>
      
    </div>
  </section>
  
  <footer class='footer section-selector-4'>
    <h5 class='h5-selector-1 body-selector-1'>Curated by Greg Perlman. Copyright 2016</h5>
  </footer>
</div>