<style>
  .h1-selector-1 {
    font-size: <%= @h1_font_size %>px;
    text-transform: <%= @h1_text_transform %>;
    letter-spacing: <%= @h1_letter_spacing %>px;
    font-weight: <%= @h1_font_weight %>;
  }

  .h2-selector-1 {
    font-size: <%= @h2_font_size %>px;
    text-transform: <%= @h2_text_transform %>;
    letter-spacing: <%= @h2_letter_spacing %>px;
    font-weight: <%= @h2_font_weight %>;
    word-spacing: <%= @h2_word_spacing %>px;
  }

  .button-selector-1 {
    font-size: <%= @button_font_size %>px;
    font-weight: <%= @button_font_weight %>;
    text-transform: <%= @button_text_transform %>;
    letter-spacing: <%= @button_letter_spacing %>px;
    padding: <%= @button_padding %>px;
    border: <%= @button_border %>px;
    border-radius: <%= @button_border_radius %>px;
    border-style: <%= @button_border_style %>;
    color: hsl(
      <%= @button_color_hue %>, 
      <%= @button_color_saturation %>%, 
      <%= @button_color_luminosity %>%);
    border-color: hsl(
      <%= @button_border_color_hue %>, 
      <%= @button_border_color_saturation %>%, 
      <%= @button_border_color_luminosity %>%);
    background-color: hsl(
      <%= @button_bg_color_hue %>, 
      <%= @button_bg_color_saturation %>%, 
      <%= @button_bg_color_luminosity %>%);
  }

  .button-selector-1:hover {
    border: <%= @button_border %>px;
    border-radius: <%= @button_border_radius %>px;
    border-style: <%= @button_border_style %>;
    color: hsl(
      <%= @button_color_hue %>, 
      <%= @button_color_saturation %>%, 
      <%= @button_color_luminosity %>%);
    border-color: hsl(
      <%= @button_border_color_hue %>, 
      <%= @button_border_color_saturation %>%, 
      <%= @button_border_color_luminosity %>%);
    background-color: hsl(
      <%= @button_bg_color_hue %>, 
      <%= @button_bg_color_saturation %>%, 
      <%= @button_bg_color_luminosity %>%);
  }

  .paragraph-selector-1 {
    font-size: <%= @paragraph_1_font_size %>px;
    text-align: <%= @paragraph_1_text_align %>;
    padding: <%= @paragraph_1_padding %>px;
    text-indent: <%= @paragraph_1_indent %>px;
    word-spacing: <%= @paragraph_1_word_spacing %>px;
  }

  .paragraph-selector-2 {
    font-size: <%= @paragraph_2_font_size %>px;
    text-align: <%= @paragraph_2_text_align %>;
    padding: <%= @paragraph_2_padding %>px;
    text-indent: <%= @paragraph_2_indent %>px;
    word-spacing: <%= @paragraph_2_word_spacing %>px;
  }
</style>