        <% end %>
        <ul class='body-selector-2'>
          <%= link_to train_path("button", "button-selector", 2) do %>
            <button class='button-selector-3 button-selector'>Edit Button</button>
          <% end %>
          <%= link_to train_path("button", "button-selector", 3) do %>
            <button class='button-selector-3 button-selector'>Body Fonts</button>
          <% end %>
          <%= link_to train_path("li", "li-selector", 1) do %>
            <button class='button-selector-3 component active'>Top-right Nav</button>
          <% end %>
        </ul>
      </div>
    </div>
  </div>

