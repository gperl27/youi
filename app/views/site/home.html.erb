            <button class='button-selector-3 button-selector'>About</button>
          <% end %>
          <%= link_to train_path("section", "section-selector", 4) do %>
            <button class='button-selector-3 button-selector'>Footer</button>
          <% end %>
        </ul>
      </div>
      <div class='col-md-4'>
        <%= link_to train_path("h2", "h2-selector", 1) do %>
          <h2 class='h2-selector-1 component active body-selector-1'>Fonts</h2>
        <% end %>
        <ul class='body-selector-2'>
          <%= link_to train_path("body", "body-selector", 1) do %>
            <button class='button-selector-3 button-selector'>Heading Fonts</button>
          <% end %>
          <%= link_to train_path("body", "body-selector", 2) do %>
            <button class='button-selector-3 button-selector'>Body Fonts</button>
          <% end %>
          <!-- <button>
            Line Height
