<%= render("home_style") %>

<div class='container-fluid body'>

  <%= render "partials/current_modal" %>
  
  <header class='header section active-section section-selector-1'>

    <div class='row'>
      
      <div class='col-md-2'>
        <%= link_to train_path("h1", "h1-selector", 1) do %>
          <h1 class='h1-selector-1 component active body-selector-1'>youi</h1>
        <% end %>
      </div>      
      <div class='col-md-10'>
        <nav class='nav'>
          <ul class='body-selector-2'>
            <%= link_to root_path do %>
              <li class="li-selector-1">
                Home
              </li>
            <% end %>
            <%= link_to stats_path do %>
              <li class='li-selector-1'>
                Stats
              </li>
            <% end %>
            <%= link_to user_path(@cookie) do %>
              <li class='li-selector-1'>
                Custom
              </li>
            <% end %>
          </ul>
        </nav>
      </div>      
    </div>
  </header>
  
  
  <section class='instructions active-section container'>
    <%= render 'partials/instructions' %>
    <div class='component active try-me'>
      <%= link_to train_path("button", "button-selector", 1) do %>
      <button class='button-selector-1 button-selector body-selector-2'>Try Me</button>
      <% end %>
    </div>
  </section>
  
  <div class='site-editables section-selector-2'>

    <div class='container'>
      <div class='row'>
        <div class='col-md-4'>
          <%= link_to train_path("h2", "h2-selector", 1) do %>
            <h2 class='h2-selector-1 component active body-selector-1'>Section Colors</h2>
          <% end %>
          <ul class='body-selector-2'>
            <%= link_to train_path("section", "section-selector", 1) do %>
              <button class='button-selector-3 button-selector' data-toggle="tooltip" data-placement="left" title="Change the heading's colors">Heading</button>
            <% end %>
            <%= link_to train_path("section", "section-selector", 2) do %>
              <button class='button-selector-3 button-selector' data-toggle="tooltip" data-placement="left" title="Change this section's colors">This Section</button>
            <% end %>
            <%= link_to train_path("section", "section-selector", 3) do %>
              <button class='button-selector-3 button-selector' data-toggle="tooltip" data-placement="left" title="Change the about section's colors">About</button>
            <% end %>
            <%= link_to train_path("section", "section-selector", 4) do %>
              <button class='button-selector-3 button-selector' data-toggle="tooltip" data-placement="left" title="Change the footer's colors">Footer</button>
            <% end %>
          </ul>
        </div>
        <div class='col-md-4'>
          <%= link_to train_path("h2", "h2-selector", 1) do %>
            <h2 class='h2-selector-1 component active body-selector-1'>Fonts</h2>
          <% end %>
          <ul class='body-selector-2'>
            <%= link_to train_path("body", "body-selector", 1) do %>
              <button class='button-selector-3 button-selector'  data-toggle="tooltip" data-placement="bottom" title="Change page's heading fonts">Heading Fonts</button>
            <% end %>
            <%= link_to train_path("body", "body-selector", 2) do %>
              <button class='button-selector-3 button-selector'  data-toggle="tooltip" data-placement="bottom" title="Change page's body font">Body Fonts</button>
            <% end %>
            <!-- <button>
              Line Height
            </button> -->
          </ul>
        </div>
        <div class='col-md-4'>
          <%= link_to train_path("h2", "h2-selector", 1) do %>
            <h2 class='h2-selector-1 component active body-selector-1'>Other Editables</h2>
          <% end %>
          <ul class='body-selector-2'>
            <%= link_to train_path("button", "button-selector", 2) do %>
              <button class='button-selector-3 button-selector' data-toggle="tooltip" data-placement="right" title="Change the edit button">Edit Button</button>
            <% end %>
            <%= link_to train_path("button", "button-selector", 3) do %>
              <button class='button-selector-3 button-selector' data-toggle="tooltip" data-placement="right" title="Change this section's buttons">This Section's Buttons</button>
            <% end %>
            <%= link_to train_path("li", "li-selector", 1) do %>
              <button class='button-selector-3 button-selector' data-toggle="tooltip" data-placement="right" title="Change the navigation element styles from the top-right corner">Top-right Navbar</button>
            <% end %>
          </ul>
        </div> 
      </div>
    </div>
  </div>

  <section class='info section active-section section-selector-3'>
    <div class='container'>
      <%= link_to train_path("h3", "h3-selector", 1) do %>
        <h3 class='h3-selector-1 component active body-selector-1'>About</h3>
      <% end %>
      
      <%= link_to train_path("paragraph", "paragraph-selector", 1) do %>
        <p class='paragraph-selector-1 component active body-selector-2'>
          <%= render "partials/about_info" %>
        </p>
      <% end %>
      
      <div class='inspirations'>
        <%= link_to train_path("h3", "h3-selector", 1) do %>
          <h3 class='h3-selector-1 component active body-selector-1'>Inspirations</h3>
        <% end %>
      <div class='row'>
        
        <div class='col-md-6'>
          <figure>
            <div class='component'>
              <%= link_to train_path("image", "image-selector", 1) do %>
                <img class="image-selector-1 image-selector" src="/twitch.jpg" alt="Twitch Plays Pokemon">
              <% end %>
            </div>
            <%= link_to train_path("h4", "h4-selector", 1) do %>
              <h4 class='h4-selector-1 component active body-selector-1'>Twtich Plays Pokemon</h4>
            <% end %>
          </figure>
          
          <%= link_to train_path("paragraph", "paragraph-selector", 2) do %>
            <p class='paragraph-selector-2 component active body-selector-2'>
              <%= render "partials/twitch_info" %>
            </p>
          <% end %>
        </div>
        
        <div class='col-md-6'>
           <figure>
            <div class='component'>
              <%= link_to train_path("image", "image-selector", 1) do %>
                <img class="image-selector-1 image-selector" src="/faces.jpg" alt="Average of women's faces">
              <% end %>
            </div>
            <%= link_to train_path("h4", "h4-selector", 1) do %>
              <h4 class='h4-selector-1 component active body-selector-1'>Average Faces of Women</h4>
            <% end %>
          </figure>
          <%= link_to train_path("paragraph", "paragraph-selector", 2) do %>
            <p class='paragraph-selector-2 component active body-selector-2'>
              <%= render "partials/faces_info" %>
            </p>
          <% end %>
        </div>
        
      </div>
      </div>
      
    </div>
  </section>
  
  <footer class='footer section active-section section-selector-4'>
    <%= link_to train_path("h5", "h5-selector", 1) do %>
      <h5 class='h5-selector-1 component active body-selector-1'>Curated by Greg Perlman. Copyright 2016</h5>
    <% end %>
  </footer> 

</div>

