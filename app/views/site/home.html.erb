<%= render("home_style") %>

<div class='container-fluid body'>
  
  <header class='header section active-section section-selector-1'>
    <div class='row'>
      
      <div class='col-md-2'>
        <%= link_to train_path("h1", "h1-selector", 1) do %>
          <h1 class='h1-selector-1 component active body-selector-1'>youi</h1>
        <% end %>
      </div>      
      <div class='col-md-10'>
        <nav class='nav'>
          <ul class='body-selector-2'>
