
<%= render 'partials/stats_header' %>
<div class='home-stats container'>
  <div class='row'>
    <div class='col-md-3'>
      <div class='stat-text'>
        <h2>Fun Facts</h2>
        <ul class='fun-facts'>
          <li><span class='orange'><%= @total_count %></span> changes</li>
          <li>Most Changed: <span class='orange'><%= @max %></span></li>
          <li>Least Changed: <span class='orange'><%= @min %></span></li>
        </ul>
      </div>

    </div>
    <div class='col-md-9'>
      <%= column_chart @model_counts %>
    </div>
  </div>
</div>
<%= render 'partials/stats_footer' %>