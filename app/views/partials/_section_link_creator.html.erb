<!-- /** Add Links to entire div without overwriting other click events **/
 -->

<script type="text/javascript">
  function addSectionLinks(section, path){
    $(section).click(function(e) {
       window.location = path; 
    });

    $(`${section} .not`).click(function(e){
      e.stopPropagation();
    });
  }

  function invokeSectionLinks(){
    addSectionLinks(".header", '<%= train_path("section", "section-selector", 1) %>');
    addSectionLinks(".site-editables", '<%= train_path("section", "section-selector", 2, anchor: "fonts") %>');
    addSectionLinks(".info", '<%= train_path("section", "section-selector", 3, anchor: "info") %>');
    addSectionLinks(".footer", '<%= train_path("section", "section-selector", 4, anchor: "foot") %>');
    addSectionLinks('.instruction-buttons', '<%= train_path("button", "button-selector", 2) %>')
    addSectionLinks('.custom-nav', '<%= train_path("li", "li-selector", 1) %>');
  }


  switch("<%= function %>"){
    case "main": invokeSectionLinks(); break;
    case "custom": invokeCustomSectionLinks(); break;
  }
</script>